                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="进入直播频道>>"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textColor="@color/red"/>

                        <android.support.v7.widget.RecyclerView
